/*==============================================================*/
/* Table : FAIRE_PARTIE                                         */
/*==============================================================*/
create or replace table FAIRE_PARTIE 
(
   ID_ASSOCIATION       integer                        not null,
   ID_MEMBERS           integer                        not null,
   constraint PK_FAIRE_PARTIE primary key clustered (ID_ASSOCIATION, ID_MEMBERS)
);

